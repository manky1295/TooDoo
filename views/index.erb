<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
	<!-- Material Design Lite Dependencies -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.amber-red.min.css">
	<script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
	<!-- Roboto Font Dependency -->
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Raleway:700" rel="stylesheet">
	<style type="text/css">
		body {
			background: #e8e8e8;
		}
		.app_title {
			font-family: 'Raleway',sans-serif; 
			font-size: 35px;
		}
		#add-note {
			width: 50%;
			margin : 10px auto;
		}
		.float-left {
			display: inline-block;
			float: left;
		}
		.note-card {
			width: 20%;
			height: 50px;
		}
		.grid-card.mdl-card {
    		width: 320px;
    		float: left;
    		margin :5px;
    		position: relative;
  
	</style>

	<title>TooDoo : Organize Yourself</title>
</head>
<body>
	<div class="mdl-layout mdl-js-layout">
		<header class="mdl-layout__header">
			<div class="mdl-layout-icon"></div>
			<div class="mdl-layout__header-row">
				<span class="mdl-layout__title app_title" >TooDoo</span>
				<div class="mdl-layout-spacer"></div>
				 <nav class="mdl-navigation">
        			<a class="mdl-navigation__link" href="#"><i class="material-icons">donut_small</i></a>
        			<a class="mdl-navigation__link" href="#"><i class="material-icons">fingerprint</i></a>
      			</nav>
			</div>
		</header>
		<div class="mdl-layout__drawer">
    		<nav class="mdl-navigation">
      			<a class="mdl-navigation__link" href="#">Categories</a>
      			<a class="mdl-navigation__link" href="#">Priotity</a>
      			<a class="mdl-navigation__link" href="#">Contact Us</a>
    		</nav>
  		</div>
  		<main class="mdl-layout__content">
    		<div id="add-note-container">
    			<div class="mdl-card mdl-shadow--4dp" id="add-note">
    				<!-- Add ToDo form -->
    				<form action="/add" method="POST">
	    				<div>
	    					<!-- Title Input -->
		      				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="margin: 5px 10%;width: 80%">
		        				<input class="mdl-textfield__input" type="text" id="title_input" name="task_title" required>
		        				<label class="mdl-textfield__label" for="title_input">Title</label>
							</div>	
	    				</div>
	    				<div>
	    					<!-- Task Description  -->
							<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" 
								style="margin: 5px 10%;width: 80%;resize: none;">
								<!-- HELP NEEDED HERE -->
								<textarea class="mdl-textfield__input" type="text" rows= "3" id="desc_input" name="task_desc"></textarea>
								<label class="mdl-textfield__label" for="desc_input">Description...</label>
							</div>
	    				</div>
		    			<div>
		    				<div style="margin: 0 30%;">
		    				<!-- Category -->
		    					<span class="mdl-chip"> 
              						<span class="mdl-chip__text">Category</span>
              					</span>
              					<span style="margin: 0 10px">
              						<label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-1">
										<input type="radio" id="option-1" class="mdl-radio__button" name="category" value="home" checked>
										<span class="mdl-radio__label">Home</span>
									</label>
              					</span>
								<span>
									<label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-2">
										<input type="radio" id="option-2" class="mdl-radio__button" name="category" value="work">
										<span class="mdl-radio__label">Work</span>
									</label>
								</span>	
		    				</div>
		    			</div>
		    			<div>
		    				<div style="display: inline-block;margin: 5px 29%;">
		    					<span class="mdl-chip"> 
              						<span class="mdl-chip__text">Priority Status</span>
              					</span>

              					<div style="display: inline-block;">
              						<input type="hidden" name="urgent" value="0">
									<label for="checkbox1" class="mdl-checkbox mdl-js-checkbox"">
										<input id="checkbox1" type="checkbox" name="urgent" class="mdl-checkbox__input" value="1">
										<span class="mdl-checkbox__label">Urgent</span>
									</label>
              					</div>
              					<div style="display: inline-block;">
              						<input type="hidden" name="important" value="0">
									<label for="checkbox2" class="mdl-checkbox mdl-js-checkbox">
										<input id="checkbox2" type="checkbox" name="important" class="mdl-checkbox__input" value="1">
										<span class="mdl-checkbox__label">Important</span>
									</label>
              					</div>
              				</div>
		    			</div>
		    			<!-- Add Button -->
		    			<div>
		    				<button class="mdl-button mdl-js-button mdl-js-ripple-effect" type="submit" style="margin-left: 84%;margin-bottom: 5px ">Add Note</button>
		    			</div>
	  				</form>
    			</div>
    		</div>

    		<div style="padding: 10px;">
    			<!-- Card View Section-->
    			<% tasks.each do |task|%>			
  				<div class="mdl-card mdl-shadow--2dp grid-card">
  					<div class="mdl-card__title">
						<h4 class="mdl-card__title-text"><%=task.title%></h4>
					</div>
    				<div class="mdl-card__supporting-text"><%=task.description%></div>
    				
    				
    				<div class="mdl-card__actions">
    					<span class="mdl-chip" style="background: <%=task.color%>;width: 38px"> 
              					<span class="mdl-chip__text" style="color: white"><%=task.category.upcase%></span>
              			</span>
    					<% if task.completed%>
    					<div style="display: inline-block;float: right">
    						<form method="POST" action="/state_change">
      							<input type="hidden" name="taskid" value="<%=task.id%>">
      							<button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" type="submit">Completed</button>
      						</form>
      					</div>
						<% else %>
						<div style="display: inline-block;float: right;">
							<form method="POST" action="/state_change">
	      						<input type="hidden" name="taskid" value="<%=task.id%>">
	      						<button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--disabled" type="submit">Incomplete</button>
	      					</form>
	      				</div>
      					<% end %>
    				</div>
  				</div>
  				<% end %>
			</div>
  		</main>
	</div>
</body>
</html>